{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "types": ["node"],
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": false,
    "skipLibCheck": false,
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
  ]
}
